        <Label Content="Capacity" HorizontalAlignment="Left" Margin="45,372,0,0" VerticalAlignment="Top" Height="28" Width="59"/>
        <Label Content="Booking" HorizontalAlignment="Left" Margin="148,372,0,0" VerticalAlignment="Top" Height="28" Width="60"/>
        <Label Content="Available" HorizontalAlignment="Left" Margin="264,372,0,0" VerticalAlignment="Top" Height="28" Width="60"/>
        <Button Content="Delete Booking" HorizontalAlignment="Left" Margin="394,375,0,0" VerticalAlignment="Top" Width="89"/>
        <Label Content="New Booking" HorizontalAlignment="Left" Margin="518,24,0,0" VerticalAlignment="Top" Height="28" Width="204"/>
        <TextBlock HorizontalAlignment="Left" Margin="104,377,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="21" Height="25"><Run Language="en-gb" Text="40"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="208,377,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="21" Height="25"><Run Language="en-gb" Text="10"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="324,377,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="21" Height="25"><Run Language="en-gb" Text="30"/></TextBlock>

        <Button Content="Customer Search" HorizontalAlignment="Left" Margin="574,312,0,0" VerticalAlignment="Top" Width="161"/>
        <TextBox HorizontalAlignment="Left" Margin="534,127,0,0" TextWrapping="Wrap" Text="Number Of Customers" VerticalAlignment="Top" Width="149"/>
        <TextBox HorizontalAlignment="Left" Margin="534,182,0,0" TextWrapping="Wrap" Text="Customer Name" VerticalAlignment="Top" Width="149"/>
        <TextBox HorizontalAlignment="Left" Margin="534,237,0,0" TextWrapping="Wrap" Text="Contact Number" VerticalAlignment="Top" Width="149" TextChanged="TextBox_TextChanged"/>
        <DatePicker HorizontalAlignment="Left" Margin="534,77,0,0" VerticalAlignment="Top"/>
        

    </Grid>
</Window>
